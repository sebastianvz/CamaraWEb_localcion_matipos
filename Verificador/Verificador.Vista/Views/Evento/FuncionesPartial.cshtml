@model IEnumerable<Verificador.Vista.Models.ViewModels.FuncionesEventoViewModel>

@foreach (var item in Model)
{
    if (item == null)
    {
        continue;
    }
    <div class="col-xs-12 col-sm-12 col-md-12" id="Localidad-3">
        <div class="alert alert-info alert-dismissable fade in" style="padding:10px 10px 10px 16px" role="alert">
            <a href="javascript:void(0)" class="btn btn-link" style="position:relative; float:right" onclick="RemoveFuncion(@(item.Id))">
                <span class="glyphicon glyphicon-remove" style="font-size: x-large" aria-hidden="true">
                </span>
            </a>
            <a href="javascript:void(0)" class="btn btn-link" style="position:relative; float:right" onclick="EditarFuncion('@(item.Id)')"><span class="glyphicon glyphicon-pencil" style="font-size: x-large" aria-hidden="true"></span></a>
            <div class="row">
                <div class="col-xs-1 col-sm-1 col-md-1">
                    <span class="glyphicon glyphicon-music" style="font-size: -webkit-xxx-large;" aria-hidden="true">
                    </span>
                </div>
                <div class="col-xs-9 col-sm-9 col-md-9">
                    <h4 class="alert-heading">@Html.DisplayFor(modelItem => item.Label) </h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><p><b>Desde:</b> @Html.DisplayFor(modelItem => item.FechaInicial)</p></td>
                                <td><p><b>Hasta:</b> @Html.DisplayFor(modelItem => item.FechaFinal)</p></td>
                                <td><p><b>Hora de apertura:</b> @(item.AperturaPuertas.ToString("HH:mm"))</p></td>
                            </tr>
                            <tr>
                                <td colspan="5">
                                    <p>@Html.DisplayFor(modelItem => item.Descripcion)</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}