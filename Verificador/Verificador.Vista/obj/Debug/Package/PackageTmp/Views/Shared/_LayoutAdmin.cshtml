        function ValidateSession() {
            var url = urlBase + "Session/ValidateSession";
            parametersUrl = "";
            $.post(url, null,
            function (data) {
                if (data.Ready) {
                    setTimeout("ValidateSession();", 60000);
                } else {
                    var url = urlBase + "Admin";
                    window.location = url;
                }
            });
        }

        function ValidarAccion() {
            return confirm("Esta seguro de continuar?");
