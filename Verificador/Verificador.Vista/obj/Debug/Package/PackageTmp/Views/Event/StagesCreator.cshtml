                <div id="form-edit-seat" class="tab-pane fade">
                    <h2>Modificar asientos</h2>
                    <div class="row seat-label-content" style="display:none;">
                        @Html.Label("Fila", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            @Html.TextBox("form-row-label", "", new { @class = "form-control", maxlength = 2, disabled = "false" })
                        </div>
                    </div>

                    <div class="row seat-numeracion-content" style="display:none;">
                        @Html.Label("Tipo de Numración", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            @(Html.Kendo().DropDownList()
                                                        .Name("form-seat-tipoNumeracion")
                                                .BindTo(new List<Verificador.Vista.Models.ViewModels.ListItem>() {
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "1,2,3,...", Text="1,2,3,..."},
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "1,3,5,...", Text="1,3,5,..."},
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "2,4,6,...", Text="2,4,6,..."},
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "A,B,C,...", Text="A,B,C,..."}
                                                })
                                                .Events(e => e.Change("Creator.onChangeSeatNumeration"))
                                                .OptionLabel("Seleccione")
                                                .DataTextField("Text")
                                                .DataValueField("Name")
                                                .HtmlAttributes(new { @class = "form-control" }))
                        </div>
                    </div>

                    <div class="row seat-numeracion-content" style="display:none;">
                        @Html.Label("Orientación", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            @(Html.Kendo().DropDownList()
                                                        .Name("form-seat-orientacion")
                                                .BindTo(new List<Verificador.Vista.Models.ViewModels.ListItem>() {
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "left", Text="<-"},
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "rigth", Text="->"},
                                                })
                                                .OptionLabel("Seleccione")
                                                .DataTextField("Text")
                                                .DataValueField("Name")
                                                .HtmlAttributes(new { @class = "form-control" }))
                        </div>
                    </div>

                    <div class="row seat-label-content">
                        @Html.Label("Label", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            @Html.TextBox("form-seat-label", "", new { @class = "form-control", maxlength = 3 })
                        </div>
                    </div>

                    <div class="row seat-numeracion-content" style="display:none;">
                        @Html.Label("Numero de Inicio", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            @Html.TextBox("form-seat-startNumber", "", new { @class = "form-control", maxlength = 3 })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12" style="text-align:center;">
                            <a class="btn btn-primary" id="apply-changes-seat" href="javascript:void(0)">Aplicar</a>
                            <a class="btn btn-primary" id="remove-changes-seat" href="javascript:void(0)">Remover</a>
                            <a class="btn btn-primary" id="restore-changes-seat" href="javascript:void(0)">Restaurar</a>
                        </div>
                        <div class="col-md-12" style="text-align:center;">
                            <a class="btn btn-link" id="btnCancelEditSeats" href="javascript:void(0)">Cancelar</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

