                    </div>
                    <div class="col-md-12 space-buttons">
                        <button type="button" id="btnCancelStage" class="btn btn-link btn-block">
                            <span class="glyphicon glyphicon-minus"></span> Cancelar
                        </button>
                    </div>
                    @*<div class="col-md-12 space-buttons">
                            <button type="button" id="btnUngroupStage" class="btn btn-primary btn-block">
                                <span class="glyphicon glyphicon-remove"></span> ungroup
                            </button>
                        </div>*@
