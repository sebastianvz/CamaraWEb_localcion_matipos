<section class="container container-canvas">
    <div class="btn-group-vertical zoom-controls">
        <button type="button" class="btn btn-default">
            <i class="glyphicon glyphicon-plus"></i>
        </button>
        <button type="button" class="btn btn-default">
            <i class="glyphicon glyphicon-minus"></i>
        </button>
    </div>
    <div class="row">
        <div id="header-creator" class="col-md-12">
            <div class="col-md-4">
                <h2 id="event-title"></h2>
            </div>
            <div class="col-md-4">
                <h4 id="control-aforo" style="margin: 30px 0px 0px 0px; padding: 0px 0px 0px 0px;">
                    Aforo Utilizado <label id="acumulatedValue-label"></label>/
                    <label id="aforoFull-label"></label>
                </h4>
            </div>
            <div class="div-right buttons-header">
                <button type="button" id="btnSaveMap" class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Guardar
                </button>
                <button type="button" id="btnRedirectToEvent" class="btn btn-primary">
                    <span class="glyphicon glyphicon-arrow-left"></span> volver
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="canvas-container-pre" class="col-md-9">
            <div id="map-container">
                <canvas id="canvas-preview" width="980" height="550"></canvas>
            </div>
        </div>
        <div id="menu-container-pre" class="col-md-3">
            <ul class="nav nav-tabs nav-justified">
                <li class="active hide"><a data-toggle="tab" id="menu-canvas-option-new" href="#canvas-menu1">Nuevo</a></li>
                <li class="hide"><a data-toggle="tab" id="menu-canvas-option-edit" href="#canvas-menu2">Editar</a></li>
            </ul>

            <div class="tab-content">
                <div id="canvas-menu1" class="tab-pane fade in active">
                    <div class="row back-buttons div-stages-types-content" id="div-stages-types-content">

                        <div class="card mb-4 box-shadow col-md-6">
                            <i class="card-img-top glyphicon glyphicon-stop"></i>
                            <div class="card-body">
                                <h4 class="card-title">Aforo</h4>
                                <a data-toggle="tab" href="#form-edit-stage" tipo="Aforo" class="btn btn-primary to-edit-stage">Seleccionar</a>
                            </div>
                        </div>
                        <div class="card mb-4 box-shadow col-md-6">
                            <i class="card-img-top glyphicon glyphicon-align-justify"></i>
                            <div class="card-body">
                                <h4 class="card-title">Filas y Sillas</h4>
                                <a data-toggle="tab" href="#form-edit-stage" tipo="FilasSillas" class="btn btn-primary to-edit-stage">Seleccionar</a>
                            </div>
                        </div>
                        <div class="card mb-4 box-shadow col-md-6">
                            <i class="card-img-top glyphicon glyphicon-bed"></i>
                            <div class="card-body">
                                <h4 class="card-title">Mesas y Sillas</h4>
                                <a data-toggle="tab" href="#form-edit-stage" tipo="MesasSillas" class="btn btn-primary to-edit-stage">Seleccionar</a>
                            </div>
                        </div>
                        <div class="card mb-4 box-shadow col-md-6">
                            <i class="card-img-top glyphicon glyphicon-glass"></i>
                            <div class="card-body">
                                <h4 class="card-title">Palcos</h4>
                                <a data-toggle="tab" href="#form-edit-stage" tipo="Palco" class="btn btn-primary to-edit-stage">Seleccionar</a>
                            </div>
                        </div>
                    </div>

