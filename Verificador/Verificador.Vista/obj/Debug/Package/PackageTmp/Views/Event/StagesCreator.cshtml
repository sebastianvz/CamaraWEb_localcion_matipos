                                    @Html.TextBox("msCantidadSillas", "", new { @class = "form-control required form-blur", blur = "50", type = "number", min = "1", })
                                </div>
                            </div>
                            <div class="row">
                                @Html.Label("Mesas / Sillas", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
