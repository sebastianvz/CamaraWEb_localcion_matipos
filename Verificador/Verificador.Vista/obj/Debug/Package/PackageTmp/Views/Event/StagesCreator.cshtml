                                    @Html.TextBox("PalcomsCantidadSillas", "", new { @class = "form-control required form-blur", blur = "50", type = "number", min = "1", })
                                </div>
                            </div>

                            <div class="row">
                                @Html.Label("Tipo de Numeración", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @(Html.Kendo().DropDownList()
                        .Name("PalcomsTipoNumeracion")
                                                .BindTo(Verificador.Vista.Models.Servicios.ServicioTipoNumeracion.getOptions())
                                                .OptionLabel("Seleccione")
                                                .DataTextField("Text")
                                                .DataValueField("Value")
                                                        .HtmlAttributes(new { @class = "form-control required" }))
                                </div>
                            </div>
                        </div>

