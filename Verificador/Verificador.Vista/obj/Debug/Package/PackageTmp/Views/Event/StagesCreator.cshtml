                <div id="form-edit-stage" class="tab-pane fade">

                    <div class="row">
                        <div id="form-stage-name" class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                @Html.Label("Nombre de la Localidad", new { @class = "form-control-label" })
                                <input type="text" id="Nombre" class="form-control required" />
                            </div>
                        </div>
                        <div id="form-Aforo" class="stage-types form-Aforo hide">
                            <div class="row">
                                @Html.Label("Capacidad", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <input type="number" id="Capacidad" class="form-control required" min="1" />
                                </div>
                            </div>
                        </div>
                        <div id="form-FilasSillas" class="stage-types form-FilasSillas hide">

                            <div class="row">
                                @Html.Label("Cantidad de Filas", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @Html.TextBox("fmFilas", "", new { @class = "form-control required form-blur", blur = "50", type = "number", min = "1", max = "50" })
                                </div>
                            </div>

                            <div class="row">
                                @Html.Label("Cantidad de Sillas", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @Html.TextBox("fmColumnas", "", new { @class = "form-control required form-blur", blur = "50", type = "number", min = "1", max = "100" })
                                </div>
                            </div>

                            <div class="row">
                                @Html.Label("Orientacion de las Filas", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @(Html.Kendo().DropDownList()
                                                        .Name("fmOrientacionFilas")
                                                .BindTo(new List<Verificador.Vista.Models.ViewModels.ListItem>() {
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "Down-Up", Text="de abajo hacia arriba"},
                                                    new Verificador.Vista.Models.ViewModels.ListItem(){Name = "Up-Down", Text="de arriba hacia abajo"}
                                                })
                                                .OptionLabel("Seleccione")
                                                .DataTextField("Text")
                                                .DataValueField("Name")
                                                        .HtmlAttributes(new { @class = "form-control required" }))
                                </div>
                            </div>

                            <div class="row">
                                @Html.Label("Orientacion de las Sillas", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @(Html.Kendo().DropDownList()
                                                    .Name("fmOrientacionSillas")
                                            .BindTo(new List<Verificador.Vista.Models.ViewModels.ListItem>() {
                                                new Verificador.Vista.Models.ViewModels.ListItem(){Name = "R-L", Text="de derecha a izquierda"},
                                                new Verificador.Vista.Models.ViewModels.ListItem(){Name = "L-R", Text="de izquierda a derecha"}
                                            })
                                            .OptionLabel("Seleccione")
                                            .DataTextField("Text")
                                            .DataValueField("Name")
                                                    .HtmlAttributes(new { @class = "form-control required" }))
                                </div>
                            </div>

                            <div class="row">
                                @Html.Label("Filas / Sillas", new { @class = "col-xs-12 col-sm-6 col-md-6 form-control-label" })
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    @(Html.Kendo().DropDownList()
                                            .Name("fmTipoNumeracion")
                                            .BindTo(Verificador.Vista.Models.Servicios.ServicioTipoNumeracion.getOptions())
                                            .OptionLabel("Seleccione")
                                            .DataTextField("Text")
                                            .DataValueField("Value")
                                                    .HtmlAttributes(new { @class = "form-control required" }))
                                </div>
                            </div>


                        </div>
                        <div id="form-MesasSillas" class="stage-types form-MesasSillas hide">

